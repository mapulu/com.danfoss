{
  "id": "com.danfoss",
  "sdk": 2,
  "name": {
    "en": "Danfoss",
    "nl": "Danfoss"
  },
  "version": "2.1.1",
  "compatibility": ">=3.0.0",
  "description": {
    "en": "Danfoss Thermostat valves support for Homey",
    "nl": "Danfoss Theromstaat knoppen ondersteuning voor Homey"
  },
  "category": [
    "climate"
  ],
  "tags": {
    "en": [
      "thermostat",
      "heating",
      "valve",
      "thermovalve",
      "danfoss"
    ],
    "nl": [
      "thermostaat",
      "verwarming",
      "ventiel",
      "thermostaatknop",
      "danfoss"
    ]
  },
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Athom B.V.",
        "email": "info@athom.com"
      },
      {
        "name": "Marco Ruiter",
        "email": "mruiter@tuxweb.nl"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "battery_alarm",
        "title": {
          "en": "The battery alarm turned on",
          "nl": "De batterijwaarschuwing gaat aan"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=LC13"
          }
        ]
      },
      {
        "id": "DanfossRS_btn_1",
        "title": {
          "en": "Button pressed",
          "nl": "Knop ingedrukt"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=RSZ"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "LC13",
      "name": {
        "en": "LC Thermostat",
        "nl": "LC Thermostaat"
      },
      "energy": {
        "batteries": [
          "AA",
          "AA"
        ]
      },
      "zwave": {
        "manufacturerId": 2,
        "productTypeId": [
          5,
          32773
        ],
        "wakeUpInterval": 1800,
        "productId": [
          1,
          3,
          4
        ],
        "learnmode": {
          "instruction": {
            "en": "Press the middle button on your Danfoss LC",
            "nl": "Druk op de middelste knop van de Danfoss LC"
          }
        },
        "associationGroups": [
          1
        ]
      },
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": []
          },
          {
            "id": "sensor",
            "capabilities": [
              "alarm_battery"
            ]
          },
          {
            "id": "battery",
            "capabilities": [
              "measure_battery"
            ]
          },
          {
            "id": "thermostat",
            "capabilities": [
              "target_temperature"
            ]
          }
        ]
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_battery",
        "alarm_battery"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 4,
          "max": 28,
          "step": 0.5
        }
      },
      "images": {
        "large": "/drivers/LC13/assets/images/large.jpg",
        "small": "/drivers/LC13/assets/images/small.jpg"
      }
    },
    {
      "id": "RSZ",
      "class": "thermostat",
      "name": {
        "en": "Room Thermostat",
        "nl": "Kamerthermostaat"
      },
      "capabilities": [
        "measure_battery",
        "target_temperature",
        "measure_temperature"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "decimals": 1
        }
      },
      "images": {
        "large": "/drivers/RSZ/assets/images/large.png",
        "small": "/drivers/RSZ/assets/images/small.png"
      },
      "energy": {
        "batteries": [
          "AA",
          "AA"
        ]
      },
      "zwave": {
        "manufacturerId": 2,
        "productTypeId": [
          3
        ],
        "productId": [
          32784
        ],
        "wakeUpInterval": 3600,
        "learnmode": {
          "image": "/drivers/RSZ/assets/learnmode.svg",
          "instruction": {
            "en": "Press the button on top of the Room Thermostat to start pairing.",
            "nl": "Druk op de knop boven op de Kamerthermostaat om het apparaat toe te voegen."
          }
        },
        "unlearnmode": {
          "image": "/drivers/RSZ/assets/learnmode.svg",
          "instruction": {
            "en": "Press the button on top of the Room Thermostat to remove the device.",
            "nl": "Druk op de knop boven op de Kamerthermostaat om het apparaat te verwijderen."
          }
        },
        "zwaveAllianceProductId": 1063,
        "imageRemotePath": "http://products.z-wavealliance.org/ProductImages/Index?productName=ZC08-14070002",
        "associationGroups": [],
        "associationGroupsOptions": {}
      }
    }
  ]
}